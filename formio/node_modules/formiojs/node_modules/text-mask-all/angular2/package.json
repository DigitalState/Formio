    "karma-phantomjs-launcher": "^1.0.4",
    "karma-typescript": "^3.0.4",
    "lite-server": "^2.2.2",
    "reflect-metadata": "^0.1.8",
    "rxjs": "^5.0.1",
    "systemjs": "0.19.39",
